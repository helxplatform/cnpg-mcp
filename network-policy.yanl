apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-cnpg-operator
  namespace: helx-ai-sandbox
spec:
  podSelector:
    matchExpressions:
    - key: cnpg.io/cluster
      operator: Exists  # Matches any CNPG cluster pod
  policyTypes:
  - Ingress
  ingress:
  - from:
    - namespaceSelector:
        matchLabels:
          kubernetes.io/metadata.name: operators
    ports:
    - protocol: TCP
      port: 8000
